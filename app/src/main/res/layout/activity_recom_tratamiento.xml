<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="5dp"
    tools:context=".RecomTratamiento">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="385dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="59dp"
            android:layout_height="57dp"
            app:srcCompat="@drawable/logoredu"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/imageCitri"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/citriapp" />

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgOpc"
                android:layout_width="29dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/menu" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="112dp"
        android:layout_height="122dp"
        android:layout_marginTop="20dp"
        android:elevation="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/tratamiento" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="260dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:fontFamily="sans-serif-light"
        android:text="Tratamientos Recomendados"
        android:textColor="@color/blackB"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="-33dp">

        <LinearLayout
            android:id="@+id/lnlLimon"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:background="@drawable/styleedttxt"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="110dp"
                android:layout_height="104dp"
                app:srcCompat="@drawable/limon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="LIMON"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlNaranja"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:background="@drawable/styleedttxt"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="110dp"
                android:layout_height="104dp"
                app:srcCompat="@drawable/naranja" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="NARANJA"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/lnlMandarina"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/styleedttxt"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="110dp"
                android:layout_height="104dp"
                app:srcCompat="@drawable/mandarina"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="MANDARINA"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlLima"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="20dp"
            android:background="@drawable/styleedttxt"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="110dp"
                android:layout_height="104dp"
                app:srcCompat="@drawable/lima" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="LIMA"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/lnlTorinja"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/styleedttxt"
            android:orientation="vertical"
            android:layout_marginLeft="47dp"
            android:gravity="center_horizontal"
            android:layout_marginVertical="20dp">

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="110dp"
                android:layout_height="104dp"
                app:srcCompat="@drawable/toronja" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="TORONJA"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="186dp"
            android:layout_height="222dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/dibujotrata"
            android:gravity="bottom"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>



